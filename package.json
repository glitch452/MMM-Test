{
  "name": "mmm-view-notifications",
  "version": "2.0.0",
  "description": "A module to display the notifications broadcast to all modules, for the purpose of assisting in the module development process.",
  "author": "David Dearden",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glitch452/MMM-ViewNotifications.git"
  },
  "bugs": {
    "url": "https://github.com/glitch452/MMM-ViewNotifications/issues"
  },
  "homepage": "https://github.com/glitch452/MMM-ViewNotifications#readme",
  "keywords": [
    "MMM",
    "MagicMirror",
    "MagicMirror2",
    "Magic",
    "Mirror",
    "Module",
    "Notifications"
  ],
  "main": "MMM-ViewNotifications.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "npm run build -- --watch",
    "format": "prettier --write .",
    "format:ci": "prettier --check \"*.{json,yml,yaml,md,html,css}\"",
    "type": "tsc --noEmit -p tsconfig.json",
    "lint": "eslint \"*/**/*.{js,ts,tsx}\" --cache --report-unused-disable-directives --fix",
    "lint-f": "eslint \"*/**/*.{js,ts,tsx}\" --report-unused-disable-directives --fix",
    "lint:ci": "eslint \"*/**/*.{js,ts,tsx}\"",
    "test": "nyc mocha -r ts-node/register -r tsconfig-paths/register \"src/**/*.spec.{ts,tsx}\"",
    "snap": "nyc mocha --update -r ts-node/register -r tsconfig-paths/register \"src/**/*.spec.{ts,tsx}\"",
    "test:watch": "mocha -w --watch-files src -r ts-node/register -r tsconfig-paths/register \"src/**/*.spec.{ts,tsx}\"",
    "test:ci": "nyc mocha --ci --forbid-only --forbid-pending --color -r ts-node/register -r tsconfig-paths/register \"src/**/*.spec.{ts,tsx}\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pkg-chk": "package-lock-check"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-snapshot-matcher": "^1.0.1",
    "@types/jsdom": "^16.2.14",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.21",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-snapshot-matcher": "^2.0.2",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-jsdoc": "^37.6.2",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "faker": "^5.5.3",
    "husky": "^7.0.4",
    "jsdom": "^19.0.0",
    "jsx-dom-cjs": "^8.0.1-beta.4",
    "lint-staged": "^12.2.0",
    "mocha": "^9.1.4",
    "moment": "^2.29.1",
    "nyc": "^15.1.0",
    "package-lock-check": "^1.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.64.0",
    "rollup-plugin-banner2": "^1.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "ts-sinon": "^2.0.2",
    "tsconfig-paths": "^3.12.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "zod": "^3.11.6"
  },
  "lint-staged": {
    "*.{json,yaml,yml,css,scss,md}": "prettier --write",
    "*.{ts,tsx}": "eslint --cache --fix"
  },
  "nyc": {
    "all": true,
    "check-coverage": false,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "extension": [
      ".js",
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/*.spec.{js,ts,tsx}",
      "**/__tests__"
    ]
  }
}
