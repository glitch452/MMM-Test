{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "checkJs": false,
    "downlevelIteration": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["ES2021", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "removeComments": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES5",
    "typeRoots": ["./node_modules/@types"]
  }
}
